generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model Trend {
  id           Int      @id @default(autoincrement())
  title        String
  summary      String
  url          String?
  thumbnail    String?
  tags         String
  source       String   @default("google")   // default temporário
  trendDate    DateTime @default(now())      // default temporário
  processedAt  DateTime?
  createdAt    DateTime @default(now())
}
